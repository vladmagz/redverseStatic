<div class="moc-gallery">
  {% for post in collections.postsByTopic["MOC"] %}
    <a class="moc-card" href="{{ post.url }}?gallery=true">
      <div class="blog-thumb">
        {% if post.data.hero %}
          {% image post.data.hero, post.data.title %}
        {% endif %}
      </div>
      <div class="moc-title">{{ post.data.title }}</div>
    </a>
  {% endfor %}
</div> 

