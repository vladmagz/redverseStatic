<div class="splash-container">

  <!-- Левое крыло -->
  <div class="splash-wing-container">
    <ul class="wing wing-left">
      <li><a href="https://www.instagram.com/redverse_/">instagram</a></li>
      <li><a href="https://www.flickr.com/photos/tremah/">flickr</a></li>
      <li><a href="mailto:vlad.magz@gmail.com">email</a></li>
      <li><a href="https://rebrickable.com/users/Redverse/mocs/">instructions</a></li>
    </ul>
  </div>

  <!-- Ядро -->
  <div class="splash-core">
    <span>RedVerse</span>
  </div>

  <!-- Правое крыло -->
  <div class="splash-wing-container">
    <ul class="wing wing-right">
      <li><a href="/home">home</a></li>
      <li><a href="/gallery">gallery</a></li>
      <li><a href="/blog">blog</a></li>
      <li><a href="/about">about</a></li>
      <li><a href="/links">links</a></li>
    </ul>
  </div>

</div>



<script>
(async () => {
  // Ждём DOM
  await new Promise(r => {
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", r);
    } else {
      r();
    }
  });

  // Ждём шрифты
  if (document.fonts && document.fonts.ready) {
    await document.fonts.ready;
  }

  // Ждём картинки
  const images = Array.from(document.images);
  await Promise.all(images.map(img => {
    if (img.complete) return Promise.resolve();
    return new Promise(res => {
      img.addEventListener("load", res);
      img.addEventListener("error", res);
    });
  }));

  // Всё готово
  document.documentElement.classList.add("is-loaded");

  // === Подключаем hover для лучей правого крыла ===
  const rightLinks = document.querySelectorAll('.wing-right a');
  const rays = document.querySelectorAll('.wing-ray');

  rightLinks.forEach((link, i) => {
    link.addEventListener('mouseenter', () => rays[i].classList.add('active'));
    link.addEventListener('mouseleave', () => rays[i].classList.remove('active'));
  });

})();


document.querySelectorAll('.wing a').forEach(link => {
  // случайный угол от -30 до +30
  const randAngle = Math.random() * 60 - 30; 
  link.style.setProperty('--skew-angle', `${randAngle}deg`);
});
</script>

</body>
